{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "Node",
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
